/**join.wxss**/
.desc{
	width: 100%;
	text-align: center;
  	border-bottom: 1px dashed #cccccc;
  	height:25rpx;
  	margin: 20rpx 0;
}
.desc text{
  	font-size: 35rpx;
  	font-weight: bold;
	display: inline-block;
	background-color: #FFF;
	padding:0 20rpx;
}

.list_area{
	padding-top: 30rpx;
	display:flex;
	flex-direction:column;
	box-sizing:border-box;
	height: 800rpx;
	overflow-y: scroll;
	overflow-x: hidden;
}

.item_image{
	width:670rpx;	
}

.item_area{
	padding: 25rpx 0;
	border-bottom: 1px solid #cccccc;
}

.image_area{
  width:215.5rpx;
  margin-right: 8rpx;
  height: 215.5rpx;
  margin-bottom: 1rpx;
  display: inline-block;
  position: relative;
  box-sizing:border-box;
}

.image_area image{
  width:100%;
  height:100%; 
  position:absolute;
}
.virtual_area{
  border: 1px dashed #cccccc;
}
.tmp_area{
	position:fixed;
	bottom:0;
	background-color:#FFF;
	width: 660rpx;
}
.tmp_area_title{
	margin-top: 20rpx;
	border-top: 2px solid #CCC;
	padding: 20rpx 0;
}
.tmp_image_area{
}
.tmp_image_area image{
  width:100%;
  height:100%;  
}
.tmp_area_image {
  white-space:nowrap;
  height: 215.5rpx;
}
.tmp_image_area {
  width:215.5rpx;
  margin-right: 8rpx;
  height: 215.5rpx;
  margin-bottom: 1rpx;
  display: inline-block;
  position: relative;
  white-space:nowrap; 
}

.icon_remove{
  position: absolute;
  top: 5rpx;
  right: 5rpx;
  z-index: 2;
}
.image_area wx-image.arrow, .tmp_image_area wx-image.arrow{
  left: 0;
  top: 0;
  margin-left: 25%;
  margin-top: 25%;
  position: absolute;
  z-index: 1;
  width: 50%;
  height: 50%;
  opacity:0.8;
}

.image_area .use_icon{
  right: 0;
  bottom: 0;
  position: absolute;
  z-index: 1;
  opacity:0.7;
  display: block;
  color:#ff4d4d;
  font-size:30rpx;
  font-weight: bold;
}

.tmp_area_btn{
	margin: 20rpx 0;
}

.save_btn{
  display:inline-block;
  width: 48%;
  float: left;
}

.submit_btn{
  display:inline-block;
  width: 100%;
}

.quality_warn{
  position: absolute;
  left: 5rpx;
  bottom: 5rpx;
  z-index: 2;
}